<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <!-- VALUE FIELD SETUP -->
    <record model="ir.ui.view" id="rea_valuation_field_form_view">
        <field name="name">rea.valuation.field.form</field>
        <field name="model">rea.valuation.field</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="field_name"/>
                            <field name="field" readonly="1" attrs="{'invisible': [('field', '=', False)], 'required': [('field', '!=', False)]}"/>
                        </group>
                        <group>
                            <field name="mandatory"/>
                            <field name="type"/>
                            <field name="calculation"
                                   attrs="{'invisible': [('type','!=','calc')],
                                           'required': [('type','=','calc')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_valuation_field_search_view">
        <field name="name">rea.valuation.field.search</field>
        <field name="model">rea.valuation.field</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_valuation_field_tree_view">
        <field name="name">rea.valuation.field.tree</field>
        <field name="model">rea.valuation.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="field"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_valuation_form_view">
        <field name="name">rea.valuation.form</field>
        <field name="model">rea.valuation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <field name="fields"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="rea_valuation_act_window">
        <field name="name">Values Setup</field>
        <field name="res_model">rea.valuation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="menu_rea_valuation">
        <field name="name">Valuation Setup</field>
        <field name="parent_id" ref="menu_behaviours"/>
        <field name="action" ref="rea_valuation_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

    <!-- CALCULATION -->
    <record id="view_rea_value_calculation_tree" model="ir.ui.view">
        <field name="name">rea.value.calculation.tree</field>
        <field name="model">rea.value.calculation</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
        <tree string="Calculation">
            <field name="expression"/>
        </tree>
        </field>
    </record>
    
    <record id="view_rea_value_calculation_form" model="ir.ui.view">
        <field name="name">rea.value.calculation.form</field>
        <field name="model">rea.value.calculation</field>
        <field name="type">form</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
        <form string="Calculation">
            <field name="expression" select="1"/>
            <field name="observables"/>
            <field name="resolution"/>
            <field name="next_valuation"/>
            <button name="compute_all" type="object" string="compute all"/>
        </form>
        </field>
    </record>
    
    <record id="view_rea_value_calculation_search" model="ir.ui.view">
        <field name="name">rea.value.calculation.search</field>
        <field name="model">rea.value.calculation</field>
        <field name="type">search</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
        <search string="Calculation">
            <field name="expression" select="True"/>
        </search>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="act_open_rea_value_calculation_view">
        <field name="name">Calculation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rea.value.calculation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_rea_value_calculation_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    
    <menuitem id="menu_rea_value_calculation"
        parent="menu_behaviours"
        sequence="20"
        action="act_open_rea_value_calculation_view"/>
    </data>
</openerp>
