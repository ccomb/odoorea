<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VALUE FIELD SETUP -->
    <record model="ir.ui.view" id="rea_valuation_field_form_view">
        <field name="name">rea.valuation.field.form</field>
        <field name="model">rea.valuation.field</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="field_name"/>
                            <field name="field" readonly="1" attrs="{'invisible': [('field', '=', False)], 'required': [('field', '!=', False)]}"/>
                            <field name="mandatory"/>
                            <field name="type"/>
                        </group>
                        <group attrs="{'invisible': [('type','!=','calc')]}">
                            <field name="expression" select="1"
                                attrs="{'required': [('type','=','calc')]}"/>
                            <field name="observables"/>
                            <field name="resolution"/>
                            <field name="next_valuation"/>
                        </group>
                        <button name="compute_all" type="object" string="compute all"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_valuation_field_search_view">
        <field name="name">rea.valuation.field.search</field>
        <field name="model">rea.valuation.field</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_valuation_field_tree_view">
        <field name="name">rea.valuation.field.tree</field>
        <field name="model">rea.valuation.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="field"/>
                <field name="expression"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_valuation_form_view">
        <field name="name">rea.valuation.form</field>
        <field name="model">rea.valuation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <field name="fields"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="rea_valuation_act_window">
        <field name="name">Values Setup</field>
        <field name="res_model">rea.valuation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="menu_rea_valuation">
        <field name="name">Valuation Setup</field>
        <field name="parent_id" ref="menu_behaviours"/>
        <field name="action" ref="rea_valuation_act_window"/>
        <field name="sequence" eval="10"/>
    </record>


    <!-- UNIT OF MEASURE -->
    <record id="view_rea_uom_tree" model="ir.ui.view">
        <field name="name">rea.uom.tree</field>
        <field name="model">rea.uom</field>
        <field name="arch" type="xml">
        <tree string="Unit of Measure">
            <field name="name"/>
        </tree>
        </field>
    </record>

    <record id="view_rea_uom_form" model="ir.ui.view">
        <field name="name">rea.uom.form</field>
        <field name="model">rea.uom</field>
        <field name="arch" type="xml">
        <form string="Unit of Measure">
            <group>
                <field name="name" select="1"/>
                <field name="code" select="1"/>
            </group>
        </form>
        </field>
    </record>
    <record id="view_rea_uom_search" model="ir.ui.view">
        <field name="name">rea.uom.search</field>
        <field name="model">rea.uom</field>
        <field name="arch" type="xml">
        <search string="Unit of Measure">
            <field name="name" select="1"/>
            <field name="code" select="1"/>
        </search>
        </field>
    </record>

<record id="view_rea_value_observable_tree" model="ir.ui.view">
    <field name="name">rea.value.observable.tree</field>
    <field name="model">rea.value.observable</field>
    <field name="type">tree</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <tree string="Observables">
        <field name="sequence" widget="handle"/>
        <field name="name"/>
        <field name="type"/>
        <field name="field"/>
    </tree>
    </field>
</record>

<record id="view_rea_value_observable_form" model="ir.ui.view">
    <field name="name">rea.value.observable.form</field>
    <field name="model">rea.value.observable</field>
    <field name="type">form</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <form string="Observables">
        <group>
            <field name="name" select="1"/>
            <field name="type"/>
            <field name="field" domain="[('ttype','in',('integer','float'))]"/>
            <field name="value_field" invisible="1"/>
        </group>
    </form>
    </field>
</record>
</odoo>
