<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!-- IDENTIFIER SETUP -->
    <record model="ir.ui.view" id="rea_ident_setup_form_view">
        <field name="name">rea.ident.setup.form</field>
        <field name="model">rea.ident.setup</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                    </group>
                    <group>
                        <field name="autonumber"/>
                        <field name="unique"/>
                        <field name="mandatory"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_ident_setup_search_view">
        <field name="name">rea.ident.setup.search</field>
        <field name="model">rea.ident.setup</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_ident_setup_tree_view">
        <field name="name">rea.ident.setup.tree</field>
        <field name="model">rea.ident.setup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="autonumber"/>
                <field name="unique"/>
                <field name="mandatory"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="rea_ident_setup_act_window">
        <field name="name">Identifier Setup</field>
        <field name="res_model">rea.ident.setup</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="menu_rea_ident_setup">
        <field name="name">Identifier Setup</field>
        <field name="parent_id" ref="menu_identifiers"/>
        <field name="action" ref="rea_ident_setup_act_window"/>
        <field name="sequence" eval="10"/>
    </record>


    <!-- IDENTIFIER -->
    <record model="ir.ui.view" id="rea_ident_form_view">
        <field name="name">rea.ident.form</field>
        <field name="model">rea.ident</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                    </group>
                    <group>
                        <field name="setup"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_ident_search_view">
        <field name="name">rea.ident.search</field>
        <field name="model">rea.ident</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_ident_tree_view">
        <field name="name">rea.ident.tree</field>
        <field name="model">rea.ident</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="setup"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="rea_ident_act_window">
        <field name="name">Identifiers</field>
        <field name="res_model">rea.ident</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="menu_rea_ident">
        <field name="name">Identifiers</field>
        <field name="parent_id" ref="menu_identifiers"/>
        <field name="action" ref="rea_ident_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

</data>
</openerp>
