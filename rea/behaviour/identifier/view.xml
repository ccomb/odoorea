    <!-- IDENTIFIER SETUP -->
    <record model="ir.ui.view" id="rea_ident_setup_form_view">
        <field name="name">rea.ident.setup.form</field>
        <field name="model">rea.ident.setup</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                    </group>
                    <group>
                        <field name="field" string="Applies to field"/>
                        <field name="prefix"/>
                        <field name="last_nb"/>
                        <field name="next_nb"/>
                        <field name="padding"/>
                        <field name="step"/>
                        <field name="suffix"/>
                        <field name="date_origin"/>
                        <field name="date_field" attrs="{'invisible': [('date_origin','=','now')],'required': [('date_origin','=','field')]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_ident_setup_search_view">
        <field name="name">rea.ident.setup.search</field>
        <field name="model">rea.ident.setup</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="rea_ident_setup_tree_view">
        <field name="name">rea.ident.setup.tree</field>
        <field name="model">rea.ident.setup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="field"/>
                <field name="last_nb"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="rea_ident_setup_act_window">
        <field name="name">Identifier Setup</field>
        <field name="res_model">rea.ident.setup</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="menu_rea_ident_setup">
