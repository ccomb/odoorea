    <!-- add an ident page in the notebooks -->
    <record model="ir.ui.view" id="rea_event_type_form_view_ident">
        <field name="inherit_id" ref="rea.rea_event_type_form_view"/>
        <field name="model">rea.event.type</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Identification">
                    <group>
                        <p>Here you can choose the numbering behaviour of the Event type you are creating.</p>
                    </group>
                    <group>
                        <field name="ident_setup"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
