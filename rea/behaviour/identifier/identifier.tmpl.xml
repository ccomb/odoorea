<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- add a field in the behaviour tab -->
<record model="ir.ui.view" id="rea_${object}_type_form_view_with_identification">
    <field name="inherit_id" ref="rea.rea_${object}_type_form_view"/>
    <field name="model">rea.${object}.type</field>
    <field name="arch" type="xml">
        <xpath expr="//notebook/page[@name='behaviours']" position="inside">
            <group string="Identification configuration">
                <field name="identification"
                       context="{'model': 'rea.contract.type', 'type_id': active_id}"/>
            </group>
        </xpath>
    </field>
</record>

<!-- Add a tab in the form view -->
<record id="rea_${object}_form_view_with_identifiers" model="ir.ui.view">
    <field name="name">${Object}</field>
    <field name="model">rea.${object}</field>
    <field name="inherit_id" ref="rea_${object}_form_view" />
    <field name="arch" type="xml">
      <xpath expr="/form/header" position='inside'>
        <field name="step" widget="statusbar" clickable="True"/>
      </xpath>
      <xpath expr="//notebook" position="inside">
          <page string="Identifiers">
            <group>
              <field name="type_identification" invisible="1"/>
            </group>
          </page>
      </xpath>
    </field>
</record>

<record id="rea_${object}_type_form_view_with_identifiers" model="ir.ui.view">
    <field name="model">rea.${object}.type</field>
    <field name="inherit_id" ref="rea.rea_${object}_type_form_view" />
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page string="Identifiers">
            <group>
              <field name="type_identification" invisible="1"/>
            </group>
          </page>
        </xpath>
    </field>
</record>

</odoo>

