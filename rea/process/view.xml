<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- PROCESS -->
<record model="ir.ui.view" id="rea_process_form_view">
    <field name="name">rea.process.form</field>
    <field name="model">rea.process</field>
    <field name="arch" type="xml">
        <form>
            <header>
            </header>
            <sheet>
                <div class="oe_title">
                    <field name="type" placeholder="Process Type"/>
                    <h1>
                        <field name="name" placeholder="Process Name"/>
                    </h1>
                </div>
                <group>
                    <field name="reconciliations">
                        <tree>
                            <field name="event"/>
                            <field name="quantity"/>
                            <field name="resource_type"/>
                        </tree>
                    </field>
                </group>
                <group string="Behaviours">
                    <notebook>
                        <page string="Identifiers">
                          <group>
                            <field name="type_identification" invisible="1"/>
                          </group>
                        </page>
                    </notebook>
                </group>
            </sheet>
            <div class="oe_chatter"></div>
        </form>
    </field>
</record>

<record model="ir.ui.view" id="rea_process_search_view">
    <field name="name">rea.process.search</field>
    <field name="model">rea.process</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <group expand="0" string="Group By">
                <filter string="Type" domain="[]" context="{'group_by':'type'}"/>
            </group>
        </search>
    </field>
</record>

<record model="ir.ui.view" id="rea_process_tree_view">
    <field name="name">rea.process.tree</field>
    <field name="model">rea.process</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="type"/>
        </tree>
    </field>
</record>

<record model="ir.actions.act_window" id="rea_process_act_window">
    <field name="name">Processes</field>
    <field name="res_model">rea.process</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

<record model="ir.ui.menu" id="menu_rea_process">
    <field name="name">Processes</field>
    <field name="parent_id" ref="menu_processes"/>
    <field name="action" ref="rea_process_act_window"/>
    <field name="sequence" eval="20"/>
</record>


<!-- PROCESS TYPE -->
<record model="ir.ui.view" id="rea_process_type_form_view">
    <field name="name">rea.process.type.form</field>
    <field name="model">rea.process.type</field>
    <field name="arch" type="xml">
        <form>
            <header>
            </header>
            <sheet>
                <div class="oe_title">
                    <field name="type" placeholder="Type" nolabel="1" />
                    <field name="kind" nolabel="1" />
                    <h1>
                        <field name="name" placeholder="Process Type Name"/>
                    </h1>
                </div>
                <group>
                    <field name="event_types"/>
                </group>
                <group string="Behaviours">
                    <notebook>
                    </notebook>
                </group>
            </sheet>
            <div class="oe_chatter"></div>
        </form>
    </field>
</record>

<record model="ir.ui.view" id="rea_process_type_search_view">
    <field name="name">rea.process.type.search</field>
    <field name="model">rea.process.type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="kind"/>
            <field name="event_types"/>
        </search>
    </field>
</record>

<record model="ir.ui.view" id="rea_process_type_tree_view">
    <field name="name">rea.process.type.tree</field>
    <field name="model">rea.process.type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="kind"/>
        </tree>
    </field>
</record>

<record model="ir.actions.act_window" id="rea_process_type_act_window">
    <field name="name">Process Types</field>
    <field name="res_model">rea.process.type</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

<record model="ir.ui.menu" id="menu_rea_process_type">
    <field name="name">Process Types</field>
    <field name="parent_id" ref="menu_processes"/>
    <field name="action" ref="rea_process_type_act_window"/>
    <field name="sequence" eval="10"/>
</record>

<!-- add an ident page in the notebooks -->
<record model="ir.ui.view" id="rea_process_type_form_view_ident">
    <field name="inherit_id" ref="rea.rea_process_type_form_view"/>
    <field name="model">rea.process.type</field>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Identification">
                <group>
                    <p>Here you can choose the numbering behaviour of the Processes of this type.</p>
                </group>
                <group>
                    <field name="identification"
                           context="{'model': 'rea.process.type', 'type_id': active_id}"/>
                </group>
            </page>
            <page string="Identifiers">
              <group>
                <field name="type_identification" invisible="1"/>
              </group>
            </page>
        </xpath>
    </field>
</record>

<!-- PROCESS GROUP -->
<record model="ir.ui.view" id="rea_process_group_form_view">
    <field name="name">rea.process.group.form</field>
    <field name="model">rea.process.group</field>
    <field name="arch" type="xml">
        <form>
            <header>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Process Group Name"/>
                    </h1>
                </div>
                <group>
                    <field name="groups"/>
                </group>
            </sheet>
            <div class="oe_chatter"></div>
        </form>
    </field>
</record>

<record model="ir.ui.view" id="rea_process_group_search_view">
    <field name="name">rea.process.group.search</field>
    <field name="model">rea.process.group</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="groups"/>
        </search>
    </field>
</record>

<record model="ir.ui.view" id="rea_process_group_tree_view">
    <field name="name">rea.process.group.tree</field>
    <field name="model">rea.process.group</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
        </tree>
    </field>
</record>

<record model="ir.actions.act_window" id="rea_process_group_act_window">
    <field name="name">Process Groups</field>
    <field name="res_model">rea.process.group</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

<record model="ir.ui.menu" id="menu_rea_process_group">
    <field name="name">Process Groups</field>
    <field name="parent_id" ref="menu_processes"/>
    <field name="action" ref="rea_process_group_act_window"/>
    <field name="sequence" eval="20"/>
</record>

</data>
</openerp>
