<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<!-- Add a tab in the event form -->
<record id="rea_event_form_view_with_reconcile" model="ir.ui.view">
    <field name="model">rea.event</field>
    <field name="inherit_id" ref="rea_event_form_view" />
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Reconciliations">
                <group>
                    <div class="oe_inline"><p><span>Unreconciled quantity: </span><field name="balance" style="margin: 0.5em"/><field name="resource_type" readonly="1"/></p>
                    <p>Below are quantities assigned to processes.
                    Processes are used to link related events.
                    To reconcile events, select and reconcile them in the list view</p>
                    </div>
                </group>
                <group>
                    <field name="reconciliations" readonly="1">
                        <tree>
                            <field name="event" invisible="1"/>
                            <field name="process"/>
                            <field name="quantity"/>
                            <field name="resource_type"/>
                        </tree>
                    </field>
                </group>
            </page>
        </xpath>
    </field>
</record>

<!-- add a column in the list view -->
<record id="rea_event_tree_view_with_reconcile" model="ir.ui.view">
    <field name="model">rea.event</field>
    <field name="inherit_id" ref="rea_event_tree_view" />
    <field name="arch" type="xml">
        <xpath expr="//tree" position="inside">
            <field name="balance"/>
        </xpath>
    </field>
</record>

<!-- search (un)reconciled events -->
<record id="rea_event_unreconciled_search_view" model="ir.ui.view">
    <field name="model">rea.event</field>
    <field name="inherit_id" ref="rea_event_search_view"/>
    <field name="arch" type="xml">
        <xpath expr="//search/group[1]" position="inside">
            <filter name="unreconciled_events"
                    string="Unreconciled"
                    domain="[('balance','!=',0)]"
                    help="Show unreconciled events"/>
        </xpath>
    </field>
</record>

<!-- Wizard to reconcile events -->
<record id="rea_event_reconciliation_wizard_view" model="ir.ui.view">
    <field name="name">Reconcile...</field>
    <field name="model">rea.event.reconciliation.wizard</field>
    <field name="arch" type="xml">
        <form string="Reconciling events">
            <label string="Choose the quantity to affect to each event so that they are partially or fully reconciled. By default the full balance is selected so that events are fully reconciled."/>
            <group>
                <field name="process_type" required="1"/>
            </group>
            <field name="reconciliations">
                <tree editable="bottom">
                    <field name="event"/>
                    <field name="quantity"/>
                    <field name="resource_type" readonly="1"/>
                </tree>
            </field>
            <footer>
                <button string="Confirm" name="save_reconciliation" type="object" default_focus="1" class="oe_highlight"/>
                or
                <button string="Cancel" class="oe_link" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="rea_event_reconciliation_wizard_action" model="ir.actions.act_window">
    <field name="name">Reconcile two events...</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">rea.event.reconciliation.wizard</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="rea_event_reconciliation_wizard_view"/>
    <field name="context">{}</field>
    <field name="target">new</field>
    <field name="help">This wizard will save the proposed reconciliation.</field>
</record>

<record model="ir.values" id="rea_event_reconciliation_wizard_irvalues">
    <field name="model_id" ref="model_rea_event" />
    <field name="name">Reconcile two events...</field>
    <field name="key2">client_action_multi</field>
    <field name="value" eval="'ir.actions.act_window,' + str(ref('rea_event_reconciliation_wizard_action'))" />
    <field name="key">action</field>
    <field name="model">rea.event</field>
</record>

</data>
</odoo>
