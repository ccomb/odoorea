<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<!-- Search commitments by step -->
<record id="rea_commitment_search_view_with_steps" model="ir.ui.view">
    <field name="name">rea.commitment.search</field>
    <field name="model">rea.commitment</field>
    <field name="inherit_id" ref="rea_commitment_search_view"/>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
        <xpath expr="//search" position="inside">
                <filter name="commitments_by_step"
                        string="Step"
                        context="{'group_by': ['step']}"
                        help="Group commitments by step"/>
        </xpath>
    </field>
</record>

<!-- Add a tab in the commitment form -->
<record id="rea_commitment_form_view_with_steps" model="ir.ui.view">
    <field name="name">Commitment</field>
    <field name="model">rea.commitment</field>
    <field name="inherit_id" ref="rea_commitment_form_view" />
    <field name="arch" type="xml">
      <xpath expr="/form/header" position='inside'>
        <field name="step" widget="statusbar" clickable="True"/>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="Lifecycle">
          <group col="9" colspan="2">
            <field name="lifecycle" invisible="1"/>
            <button name="step_previous" string=""
                    type="object" icon="fa-arrow-circle-o-left"/>
            <button name="step_next" string=""
              type="object" icon="fa-arrow-circle-o-right"/>
        <field name="state" invisible="1"/>
          </group>
        </page>
      </xpath>
    </field>
</record>

<!-- add a tab in the commitment type form -->
<record id="rea_commitment_type_form_view_with_steps" model="ir.ui.view">
    <field name="model">rea.commitment.type</field>
    <field name="inherit_id" ref="rea.rea_commitment_type_form_view" />
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Lifecycle">
                <group>
                    <p>Here you can choose the lifecycle of the Commitments of this type.</p>
                </group>
                <group>
                    <field name="lifecycle"/>
                    <field name="subobjects" widget="many2many_tags" domain="[('model', '=', 'rea.commitment')]"/>
                </group>
            </page>
        </xpath>
    </field>
</record>

<!-- Add a column in the commitment list -->
<record id="rea_commitment_tree_view_with_steps" model="ir.ui.view">
    <field name="model">rea.commitment</field>
    <field name="inherit_id" ref="rea_commitment_tree_view" />
    <field name="arch" type="xml">
        <xpath expr="/tree" position="inside">
            <field name="step"/>
              <button name="step_previous" string=""
                      type="object" icon="fa-arrow-circle-o-left" />
              <button name="step_next" string=""
                type="object" icon="fa-arrow-circle-o-right" />
        </xpath>
    </field>
</record>

</data>
</odoo>

